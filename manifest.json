{
  "manifest_version": 2,

  "name": "ES6 Tips",
  "description": "This extension will give you a new ES6 tip each day!",
  "version": "1.0",
  "author": "Alex Pop",

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },

  "background": {
    "scripts": ["scripts/popup.js"]
  },

  "permissions": [
    "activeTab",
    "background",
    "storage",
    "notifications",
    "http://*/",
    "https://*/"
  ]
}